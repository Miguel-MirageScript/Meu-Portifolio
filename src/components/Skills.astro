---
import { CenterTitle, SkillTitle, SkillGrid } from "./UI";
import {
    FrontendStack,
    BackendStack,
    ProgrammingStack,
    ToolsStack,
} from "../utils/SkillStack";
---

<section 
    id="skills" 
    class="w-full min-h-screen px-6 py-4 pt-14 bg-background"
>
    {/* Espaço SEMPRE no início da sessão, só aparece no mobile/tablet */}
    <div class="block lg:hidden w-full" style="margin-top: 16rem;"></div>

    <CenterTitle title="Minhas Habilidades" color="primary" />

    <div class="Fade_Up flex justify-center items-start flex-col lg:flex-row gap-2">
        <div class="Fade_Up flex_center flex-col gap-4 py-4 xs:p-4 w-full h-full">
            <SkillTitle title="Front-End" color="primary" />
            <SkillGrid stack={FrontendStack} />
        </div>
        <div class="Fade_Up flex_center flex-col gap-4 py-4 xs:p-4 w-full h-full">
            <SkillTitle title="Back-End" color="primary" />
            <SkillGrid stack={BackendStack} />
        </div>
    </div>

    <div class="flex justify-center items-start flex-col lg:flex-row gap-2">
        <div class="Fade_Up flex_center flex-col gap-4 py-4 xs:p-4 w-full h-full">
            <SkillTitle title="Programação" color="primary" />
            <SkillGrid stack={ProgrammingStack} />
        </div>
        <div class="Fade_Up flex_center flex-col gap-4 py-4 xs:p-4 w-full h-full">
            <SkillTitle title="Tecnologias & Ferramentas" color="primary" />
            <SkillGrid stack={ToolsStack} />
        </div>
    </div>
    
    <div
        id="avatar-target-skills"
        class="hidden lg:block w-full h-1 p-4 absolute top-[200vh] left-0"
    >
    </div>
</section>
