---
import { Image } from "astro:assets";
import {
    DiscordIcon,
    FaceBookIcon,
    GithubIcon,
    InstagramIcon,
    LinkedinIcon,
    TwitterIcon,
} from "../assets/SVGs";

const currentYear = new Date().getFullYear();
---

<footer
    class="relative bottom-0 w-full h-[50vh] flex flex-col justify-between items-center px-4 py-8 bg-footer overflow-hidden"
>
    <!-- SVG decorativo superior -->
    <svg
        id="visual"
        version="1.1"
        viewBox="0 321.18 960 219.82"
        class="absolute -translate-y-full w-full"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d="M0 389L26.7 371.8C53.3 354.7 106.7 320.3 160 321.2C213.3 322 266.7 358 320 386C373.3 414 426.7 434 480 419.5C533.3 405 586.7 356 640 339.7C693.3 323.3 746.7 339.7 800 362.3C853.3 385 906.7 414 933.3 428.5L960 443L960 541H0Z"
            fill="transparent"
        ></path>
        <path
            d="M0 355L26.7 350C53.3 345 106.7 335 160 347.8C213.3 360.7 266.7 396.3 320 421.2C373.3 446 426.7 460 480 466.2C533.3 472.3 586.7 470.7 640 453.2C693.3 435.7 746.7 402.3 800 400.7C853.3 399 906.7 429 933.3 444L960 459V541H0Z"
            fill="var(--footerSvgB)"
        ></path>
        <path
            d="M0 505L26.7 502.2C53.3 499.3 106.7 493.7 160 484.5C213.3 475.3 266.7 462.7 320 444.2C373.3 425.7 426.7 401.3 480 409C533.3 416.7 586.7 456.3 640 475C693.3 493.7 746.7 491.3 800 479.3C853.3 467.3 906.7 445.7 933.3 434.8L960 424V541H0Z"
            fill="var(--footerSvgA)"
        ></path>
        <path
            d="M0 501L26.7 498C53.3 495 106.7 489 160 490C213.3 491 266.7 499 320 501.3C373.3 503.7 426.7 500.3 480 491.3C533.3 482.3 586.7 467.7 640 464.7C693.3 461.7 746.7 470.3 800 469.3C853.3 468.3 906.7 457.7 933.3 452.3L960 447V541H0Z"
            fill="var(--footer)"
        ></path>
    </svg>

    <!-- Nome / Título -->
    <div class="w-full flex_center flex-col gap-2 z-20 text-center text-white">
        <span class="font-semibold tracking-wide text-lg">Israel Miguel | Portfólio</span>
    </div>

    <!-- Links sociais -->
    <div class="grid grid-cols-3 lg:grid-cols-6 gap-x-20 gap-y-10 lg:gap-20 z-20">
        <a
            href="https://www.linkedin.com/in/miguel-quiroz-cs/"
            target="_blank"
            rel="noreferrer"
            title="LinkedIn"
        >
            <Image src={LinkedinIcon} alt="LinkedIn" width={30} height={30} />
        </a>

        <a
            href="https://github.com/Miguel-MirageScript"
            target="_blank"
            rel="noreferrer"
            title="GitHub"
        >
            <Image src={GithubIcon} alt="GitHub" width={30} height={30} />
        </a>

        <a
            href="https://www.instagram.com/ofc.quiroz/"
            target="_blank"
            rel="noreferrer"
            title="Instagram"
        >
            <Image src={InstagramIcon} alt="Instagram" width={30} height={30} />
        </a>

        <a
            href="https://discord.gg/TpfP8sY4KG"
            target="_blank"
            rel="noreferrer"
            title="Discord"
        >
            <Image src={DiscordIcon} alt="Discord" width={30} height={30} />
        </a>

        <a
            href="https://facebook.com/"
            target="_blank"
            rel="noreferrer"
            title="Facebook"
        >
            <Image src={FaceBookIcon} alt="Facebook" width={30} height={30} />
        </a>

        <a
            href="https://twitter.com/"
            target="_blank"
            rel="noreferrer"
            title="Twitter / X"
        >
            <Image src={TwitterIcon} alt="Twitter X" width={30} height={30} />
        </a>
    </div>

    <!-- Copyright -->
    <span class="z-20 text-sm text-white text-center">
        © {currentYear} Miguel Quiroz — Todos os direitos reservados.
    </span>
</footer>
